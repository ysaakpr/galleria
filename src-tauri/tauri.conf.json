{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Galleria",
  "version": "0.1.0",
  "identifier": "com.galleria.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Galleria - Photo Gallery",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' https://s3.amazonaws.com https://*.s3.amazonaws.com https://accounts.google.com https://oauth2.googleapis.com https://www.googleapis.com; img-src 'self' https: data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; connect-src 'self' https://accounts.google.com https://oauth2.googleapis.com https://www.googleapis.com https://*.s3.amazonaws.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "dialog": {
      "all": true,
      "open": true,
      "save": true
    },
    "fs": {
      "scope": ["$PICTURE/**", "$HOME/**", "$APPDATA/**"]
    },
    "http": {
      "scope": ["https://accounts.google.com/**", "https://oauth2.googleapis.com/**", "https://www.googleapis.com/**", "https://*.s3.amazonaws.com/**"]
    },
    "sql": {
      "scope": "sqlite:galleria.db"
    }
  }
}

